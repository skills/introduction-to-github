# Sovereign TV App Configuration

# Server Configuration
PORT=3000
NODE_ENV=development
HOST=localhost

# JWT Authentication
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRATION=24h

# NFT Configuration
NFT_GATEWAY_URL=https://nft.omniverse.io
KUNTA_NFT_CONTRACT_ADDRESS=0x...
NFT_VERIFICATION_ENABLED=true

# ScrollCoin Configuration
SCROLLCOIN_API_URL=https://api.scrollcoin.io
SCROLLCOIN_CONTRACT_ADDRESS=0x...
PAYMENT_TIERS_ENABLED=true

# Music Catalog - Legacy of Light
MUSIC_CATALOG_API=https://catalog.legacyoflight.io
STREAMING_QUALITY=high
CATALOG_UPDATE_INTERVAL=3600000

# Prophecy Documentation Protocol (PDP)
PDP_DATA_URL=https://pdp.omniverse.io
PDP_SYNC_ENABLED=true
PDP_REFRESH_INTERVAL=86400000

# Database Configuration
DB_TYPE=json
DB_PATH=./data/sovereign-tv.db

# Content Delivery
CDN_URL=https://cdn.omniverse.io
STREAMING_ENDPOINT=https://stream.omniverse.io
VIDEO_QUALITY_OPTIONS=480p,720p,1080p,4k

# Community Features
ENABLE_SOCIAL_FEATURES=true
ENABLE_RECOMMENDATIONS=true
ENABLE_USER_PROFILES=true

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
ENABLE_CORS=true
ALLOWED_ORIGINS=*

# Monetization
ENABLE_SUBSCRIPTIONS=true
FREE_TIER_ENABLED=true
PREMIUM_TIER_PRICE=9.99
ELITE_TIER_PRICE=29.99
ACCEPT_SCROLLCOIN=true
ACCEPT_NFT_PAYMENT=true
