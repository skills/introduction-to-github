# Alliance Environment Configuration Template
# Copy this file to .env.alliance and fill in the values

# Network Configuration
NETWORK=sepolia
DEPLOYER_PRIVATE_KEY=your_private_key_here

# RPC Endpoints
SEPOLIA_RPC_URL=https://rpc.sepolia.org
MAINNET_RPC_URL=https://eth.llamarpc.com

# Block Explorer API Keys
ETHERSCAN_API_KEY=your_etherscan_api_key

# Alliance Configuration
ALLIANCE_ADMIN_ADDRESS=your_admin_address
MULTISIG_ADDRESS=your_multisig_address
DAO_ADDRESS=your_dao_address

# KYC and Compliance
KYC_PROVIDER_ADDRESS=your_kyc_provider_address
COMPLIANCE_OFFICER_ADDRESS=your_compliance_officer_address

# Asset Bridge Configuration
ASSET_BRIDGE_CUSTODIAN=your_custodian_address
ASSET_VERIFIER_ADDRESS=your_verifier_address

# IPFS Configuration
IPFS_API_KEY=your_ipfs_api_key
IPFS_API_SECRET=your_ipfs_api_secret
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret_key

# API Configuration
API_BASE_URL=https://api.scrollverse.io
API_KEY=your_api_key
WEBHOOK_SECRET=your_webhook_secret

# Monitoring and Alerts
TENDERLY_PROJECT_SLUG=scrollverse-alliances
TENDERLY_API_KEY=your_tenderly_api_key
DEFENDER_API_KEY=your_defender_api_key
DEFENDER_API_SECRET=your_defender_api_secret

# Notifications
SLACK_WEBHOOK_URL=your_slack_webhook_url
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
DISCORD_WEBHOOK_URL=your_discord_webhook_url

# Email Notifications
SENDGRID_API_KEY=your_sendgrid_api_key
NOTIFICATION_EMAIL=notifications@scrollverse.io

# Database (for off-chain tracking)
DATABASE_URL=postgresql://user:password@localhost:5432/alliance_db
REDIS_URL=redis://localhost:6379

# Oracle Providers
CHAINLINK_NODE_URL=your_chainlink_node_url
UNA_API_KEY=your_una_api_key

# Security
ENCRYPTION_KEY=your_encryption_key
JWT_SECRET=your_jwt_secret
SIGNING_KEY=your_signing_key

# Gas Configuration
MAX_GAS_PRICE=100
GAS_LIMIT=8000000

# Feature Flags
ENABLE_TESTNET_MODE=true
ENABLE_DEBUG_LOGGING=false
ENABLE_ANALYTICS=true
ENABLE_AUTOMATIC_VERIFICATION=true

# Legal and Compliance URLs
TERMS_OF_SERVICE_URL=https://legal.scrollverse.io/alliance-terms
PRIVACY_POLICY_URL=https://legal.scrollverse.io/privacy
GOVERNANCE_FRAMEWORK_URL=https://docs.scrollverse.io/alliance-governance

# Backup Configuration
S3_BUCKET=scrollverse-alliance-backups
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Development
LOCAL_RPC_URL=http://127.0.0.1:8545
TEST_PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# Production Safety
PRODUCTION_SAFETY_ENABLED=true
REQUIRE_MULTISIG_APPROVAL=true
TIMELOCK_DELAY_SECONDS=172800
