# ScrollVerse Contracts Configuration
# Copy this file to .env and fill in your values

# ========================================
# WALLET CONFIGURATION
# ========================================

# Deployer wallet private key (without 0x prefix)
DEPLOYER_PRIVATE_KEY=your_private_key_here

# ========================================
# NETWORK RPC URLS
# ========================================

# RPC URLs
SEPOLIA_RPC_URL=https://rpc.sepolia.org
MAINNET_RPC_URL=https://eth.llamarpc.com

# ========================================
# ETHERSCAN VERIFICATION
# ========================================

# Etherscan API Key for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# ========================================
# GAS REPORTING (Optional)
# ========================================

REPORT_GAS=false
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# ========================================
# MIRRORTOKEN DISTRIBUTION CONFIGURATION
# ========================================

# Deployed MirrorToken contract address (required for distribution)
MIRROR_TOKEN_ADDRESS=

# Option 1: Temporary Holding Mode
# Use a single address to receive all tokens initially for controlled distribution
# TEMPORARY_HOLDING_ADDRESS=0xYourTemporaryHoldingAddress

# Option 2: Multi-Address Distribution Mode
# Set all four allocation addresses for direct distribution
# TREASURY_ADDRESS=0xYourTreasuryAddress
# FUSION_REWARDS_ADDRESS=0xYourFusionRewardsAddress
# TEAM_VESTING_ADDRESS=0xYourTeamVestingContractAddress
# LIQUIDITY_ADDRESS=0xYourLiquidityAddress
