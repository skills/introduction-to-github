# Sovereign TV Payments Environment Configuration
# Copy this file to .env and update with your settings

# Flask Configuration
FLASK_APP=app.py
FLASK_DEBUG=False
FLASK_ENV=production

# Server Configuration
PORT=5002
SECRET_KEY=sovereign-payments-secret-key-change-in-production

# Stripe Configuration
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_test_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs for subscription tiers
# Create these in Stripe Dashboard > Products
STRIPE_PRICE_FOUNDING=price_founding_supporter_id
STRIPE_PRICE_GENESIS=price_genesis_tier_id
STRIPE_PRICE_DIVINE=price_divine_tier_id

# PayPal Configuration
# Get these from https://developer.paypal.com/dashboard/applications
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# URLs
SUCCESS_URL=https://your-domain.com/success
CANCEL_URL=https://your-domain.com/subscribe

# Application Settings
APP_NAME=Sovereign TV Payments
APP_VERSION=1.0.0
