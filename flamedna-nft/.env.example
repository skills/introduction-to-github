# FlameDNA NFT Environment Configuration
# Copy this file to .env and update with your values

# Private key for deployment (DO NOT COMMIT!)
PRIVATE_KEY=your_wallet_private_key_here

# RPC URLs
SCROLL_SEPOLIA_RPC=https://sepolia-rpc.scroll.io/
SCROLL_MAINNET_RPC=https://rpc.scroll.io/
SEPOLIA_RPC=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
MAINNET_RPC=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
POLYGON_RPC=https://polygon-rpc.com
MUMBAI_RPC=https://rpc-mumbai.maticvigil.com

# API Keys for contract verification
INFURA_API_KEY=your_infura_api_key
ETHERSCAN_API_KEY=your_etherscan_api_key
POLYGONSCAN_API_KEY=your_polygonscan_api_key
SCROLLSCAN_API_KEY=your_scrollscan_api_key

# Contract deployment parameters
ROYALTY_RECEIVER=0xYourWalletAddress
ROYALTY_FEE_NUMERATOR=500

# Metadata URIs (update after deploying metadata)
BASE_TOKEN_URI=ipfs://YOUR_METADATA_CID/
CONTRACT_URI=ipfs://YOUR_CONTRACT_METADATA_CID

# Gas reporting
REPORT_GAS=false
COINMARKETCAP_API_KEY=your_coinmarketcap_key
