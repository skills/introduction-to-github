# ScrollVerse Portfolio Environment Configuration
# Copy this file to .env and update with your settings

# Flask Configuration
FLASK_APP=app.py
FLASK_DEBUG=False
FLASK_ENV=production

# Server Configuration
PORT=5000
SECRET_KEY=your-secret-key-change-in-production

# Admin Authentication
# Token for accessing the /admin route (change in production!)
ADMIN_TOKEN=your-admin-token-change-in-production

# CORS Configuration for SocketIO
# Use comma-separated list of allowed origins, or * for all (not recommended in production)
# Example: https://yourdomain.com,https://api.yourdomain.com
CORS_ALLOWED_ORIGINS=*

# Application Settings
APP_NAME=ScrollVerse Portfolio
APP_VERSION=2.0.0

