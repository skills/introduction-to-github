# ScrollVerse Portfolio Environment Configuration
# Copy this file to .env and update with your settings

# Flask Configuration
FLASK_APP=app.py
FLASK_DEBUG=False
FLASK_ENV=production

# Server Configuration
PORT=5000

# Security - REQUIRED for production
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=your-secure-secret-key-change-in-production
SECRET_KEY=your-secret-key-change-in-production

# Admin Authentication
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
ADMIN_TOKEN=your-admin-token-change-in-production

# GitHub Webhook Security
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
# Configure this secret in your GitHub repository webhook settings
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret-change-in-production
# Token for accessing the /admin route (change in production!)
ADMIN_TOKEN=your-admin-token-change-in-production

# CORS Configuration for SocketIO
# Use comma-separated list of allowed origins, or * for all (not recommended in production)
# Example: https://yourdomain.com,https://api.yourdomain.com
CORS_ALLOWED_ORIGINS=*

# Application Settings
APP_NAME=ScrollVerse Portfolio
APP_VERSION=2.0.0

