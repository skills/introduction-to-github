{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "gunicorn --workers 2 --threads 4 --worker-class gthread --bind 0.0.0.0:$PORT app:app",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 60
  }
}
